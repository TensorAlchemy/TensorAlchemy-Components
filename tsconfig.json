{
  "include": ["src/**/*.ts", "src/**/*.tsx", "types.d.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "preserve",
    "target": "es6",
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib/index.d.ts",
    "typeRoots": ["node_modules/@types", "types.d.ts"],
    "paths": {
      "@app/*": ["src/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
